<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FF0174DF"
    tools:context=".ColorActivity" >

    <TextView
        android:id="@+id/myfavoriteColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="Arial"
        android:text="My favorite color is..."
        android:textColor="#FFFFFFFF"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/myfavoriteColor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myfavoriteColor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:fontFamily="Arial"
        android:text="BLUE"
        android:textColor="#FFFFFFFF"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/userfavoriteColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myfavoriteColor2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:fontFamily="Arial"
        android:text="Enter your favorite color:"
        android:textColor="#FFFFFFFF"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/userFavoriteColor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/userfavoriteColor"
        android:layout_below="@+id/userfavoriteColor"
        android:layout_marginTop="44dp"
        android:ems="10" />

     <Button
         android:id="@+id/enter_favorite_color"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/userFavoriteColor2"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="24dp"
         android:text="Enter"
         android:textAlignment="center"
         android:textSize="20dp" />

</RelativeLayout>
